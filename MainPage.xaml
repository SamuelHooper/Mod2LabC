<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod2LabC.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="DotTwo" FontSize="60" Text="." Clicked="AddLetterTwo" WidthRequest="100"/>
                <Button x:Name="DashTwo" FontSize="60" Text="-" Clicked="AddLetterTwo" WidthRequest="100"/>
            </HorizontalStackLayout>
            <Button x:Name="SpaceTwo" Text="Space" Clicked="AddLetterTwo" HorizontalOptions="Fill" />

            <Label x:Name="MessageTwo" Text="" />

            <Label
                Text="M.A.D. Tap Keyboard"
                Style="{StaticResource Headline}" />

            <Label x:Name="MessageOne" Text="" />

            <HorizontalStackLayout Spacing="10">
                <Button x:Name="DotOne" FontSize="60" Text="." Clicked="AddLetterOne" WidthRequest="100"/>
                <Button x:Name="DashOne" FontSize="60" Text="-" Clicked="AddLetterOne" WidthRequest="100"/>
            </HorizontalStackLayout>
            <Button x:Name="SpaceOne" Text="Space" Clicked="AddLetterOne" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
